<Window x:Class="MonitorSistemaVentanas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitorSistemaVentanas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel HorizontalAlignment="Stretch">
            <ToolBar Height="112"  DockPanel.Dock="Top">
                <Button x:Name="btnOrdenador" Content="Ordenador" Height="107" VerticalAlignment="Top" Width="75" Click="BtnOrdenador_Click"/>
                <Button x:Name="btnCPU" Content="CPU" Height="107" VerticalAlignment="Top" Width="75" Click="BtnCPU_Click"/>
                <Button x:Name="btnDisco" Content="Disco" Height="107" VerticalAlignment="Top" Width="75" Click="BtnDisco_Click"/>
                <Button x:Name="btnRed" Content="Red" Height="107" VerticalAlignment="Top" Width="75" Click="BtnRed_Click" />
                <Button x:Name="btnAcercaDe" Content="Acerca de" Height="107" VerticalAlignment="Top" Width="75" Click="BtnAcercaDe_Click" />
            </ToolBar>
            <Frame x:Name="framePrincipal" />
        </DockPanel>
    </Grid>
</Window>
