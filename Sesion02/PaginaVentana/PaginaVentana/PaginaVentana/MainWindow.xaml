<Window x:Class="PaginaVentana.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaginaVentana"
        mc:Ignorable="d"
        Title="Ejemplo XAML Browser Application (XBAP)" Height="450" Width="800">
    <Grid>
        <DockPanel HorizontalAlignment="Stretch">
            <ToolBar Height="112"  DockPanel.Dock="Top">
                <Button x:Name="btnVolver" Content="Volver" Height="107" VerticalAlignment="Top" Width="75" Click="BtnVolver_Click"/>
                <Button x:Name="btnPagina1" Content="Página 1" Height="107" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
                <Button x:Name="btnPagina2" Content="Página 2" Height="107" VerticalAlignment="Top" Width="75" Click="BtnPagina2_Click"/>
                <Button x:Name="btnPagina3" Content="Página 3" Height="107" VerticalAlignment="Top" Width="75" Click="BtnPagina3_Click"/>
                <Button x:Name="btnNuevaVentana" Content="Nueva ventana" Height="107" VerticalAlignment="Top" Width="75" Click="BtnNuevaVentana_Click"/>
            </ToolBar>
            <Frame x:Name="framePrincipal" Content="Frame"/>
        </DockPanel>

    </Grid>
</Window>
